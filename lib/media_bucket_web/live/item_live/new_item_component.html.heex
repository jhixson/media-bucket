<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="item-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :title %>
    <%= text_input f, :title %>
    <%= error_tag f, :title %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
      <%= live_patch "Cancel", to: @return_to, class: "text-sm" %>
    </div>
  </.form>
</div>
